<Page x:Class="GlobalProject_1.Page1_Table"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GlobalProject_1"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="Page1_Table" >

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="30*" MaxHeight="60"/>
            <RowDefinition Height="200*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10*" MaxWidth="100"/>
            <ColumnDefinition Width="71*"/>
        </Grid.ColumnDefinitions>
        <DataGrid x:Name="datagrid" ItemsSource = "{Binding}" Grid.Column="1" Grid.Row="1" Margin="0,0,10,10" FontSize="16"/>
        <ComboBox x:Name="Cb1" HorizontalAlignment="Center"  VerticalAlignment="Bottom" Width="89" SelectionChanged="ComboBox_SelectionChanged">
            
        </ComboBox>
    </Grid>
</Page>
